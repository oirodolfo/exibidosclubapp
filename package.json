{
  "name": "exibidos",
  "version": "0.1.0",
  "private": true,
  "description": "exibidos.club â€” Production monorepo",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "dev:web": "pnpm --filter @exibidos/web dev",
    "dev:api": "pnpm --filter @exibidos/api dev",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test --if-present",
    "clean": "pnpm -r run clean 2>/dev/null; rm -rf node_modules **/node_modules **/dist **/.next"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
